<%- include('header'); -%>
<div class="container">
    <h3 style="justify-content: center;">Update Election Poll</h3>
  <div class="row">

    <!--Form for updating of the election polls-->
      <div class="col-xl-6 col-md-6 mt-4">
          <div class="card border-left-primary shadow h-100 py-2">
              <div class="card-body">
                <h3 style="justify-content: center;">Election Poll Result</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Political Party</th>
                            <th scope="col">Total Votes</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                      <%  if(candidates.length !== 0) {candidates.map( candidate => { %>
                        <tr data-toggle="modal" data-target="#freelancer-info" style="cursor: pointer;">
                            <td><%=candidate.firstName%></td>
                            <td><%=candidate.lastName%></td>
                            <td><%=candidate.politicalParty%></td>
                            <td>4</td>
                        </tr>
                        <%
                        })} else { %>
                          <td>No candidate for this election poll</td>
                        <%    
                        }
                      %>
                      
                    </tbody>
      
                </table>
              </div>
          </div>
      </div>


      <!--Form for adding of candidate to the election polls-->
      <div class="col-xl-6 col-md-6 mt-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
              <h3 style="justify-content: center;">Select Candidate and vote</h3>
              <form action="/createCandidate" method="POST">
                <div class="form-floating mb-3">
                  <input type="text" class="form-control" id="firstName" name="firstName" placeholder="First Name">
                  <label for="floatingInput">First Name</label>
                </div>
                <div class="form-floating mb-3">
                  <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Last Name">
                  <label for="floatingInput">Last Name</label>
                </div>
                <div class="form-floating mb-3">
                  <input type="text" class="form-control" name="politicalParty" id="politicalParty" placeholder="Polical Party">
                   <label for="floatingInput">Telephone Number</label>
                </div>
                <div class="form-floating mb-3" >
                    <select name="candidateId" id="candidateId" class="form-control">
                      <%  if(candidates.length !== 0) {candidates.map( candidate => { %>
                        <option value="<%=candidate.id%>"><%=candidate.firstName +" " + candidate.lastName%></option>
                        <%
                        })} else { %>
                         <option value="">No Candidate Registered</option>
                        <%    
                        }
                      %>
                    </select>
                  
                   <label for="floatingInput">Candidate Name</label>
                </div>
                <div class="d-grid">
                <input class="btn btn-primary btn-login text-uppercase fw-bold" type="submit" value="Vote" name="Vote"/>
                </div>
              </form>
            </div>
        </div>
    </div>
    </div>
</div>